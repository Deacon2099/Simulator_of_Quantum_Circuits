<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".circuit_setup">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/circ_setup_description"
        android:textAlignment="center"
        android:textSize="36sp" />

    <LinearLayout
        android:id="@+id/setup_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/number_of_qubits_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/circ_setup_number_of_qubits"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/number_of_qubits_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/initial_state_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/circ_setup_initial_state"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/initial_state_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/create_circuit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/circ_setup_create_button" />

    </LinearLayout>

</FrameLayout>